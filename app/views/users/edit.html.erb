  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>

      <!--エラー表示-->
   <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>

      <h1>Editing Book</h1>
    	<%= form_with model: @user, url: update_user_path(@user.id) do |f| %>
       <label for="inputName">Name</label>
       <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
       <h4><label for="inputImage">ProfileImage</label></h4>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
       <h4>Introduction</h4>
       <%= f.text_area :introduction %>
       <div class="actions">
        <%= f.submit 'Update User' %>
       </div>
      <% end %>
     </div>
   </div>
  </div>
